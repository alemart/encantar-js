{
  "name": "encantar",
  "version": "0.4.6-dev",
  "description": "GPU-accelerated Augmented Reality framework for the web",
  "author": "Alexandre Martins <alemartf@gmail.com> (https://github.com/alemart)",
  "homepage": "https://encantar.dev",
  "license": "LGPL-3.0-or-later",
  "repository": "github:alemart/encantar-js",
  "funding": "https://github.com/sponsors/alemart",
  "keywords": [
    "augmented reality",
    "mixed reality",
    "virtual reality",
    "ar",
    "xr",
    "vr",
    "webar",
    "webxr",
    "webvr",
    "webgl",
    "webgl2",
    "wasm",
    "magic",
    "aframe",
    "babylonjs",
    "threejs",
    "playcanvas",
    "3d"
  ],
  "type": "module",
  "main": "src/main.ts",
  "scripts": {
    "prebuild": "tsc --noEmit && npm run clean",
    "build": "npm run build-encantar && npm run build-types && npm run build-plugins && npm run build-addons",
    "build-encantar": "node -e \"require('fs').mkdirSync('build', {recursive:true})\" && node esbuild.mjs && node esbuild.mjs --minify",
    "build-types": "node -e \"require('fs').mkdirSync('build', {recursive:true})\" && tsc --emitDeclarationOnly --isolatedModules false --declaration --outFile build/encantar.d.ts",
    "build-types-dir": "node -e \"require('fs').mkdirSync('build/types', {recursive:true})\" && tsc --emitDeclarationOnly --declaration --declarationDir build/types",
    "build-plugins": "node build-extras.mjs plugins",
    "build-addons": "node build-extras.mjs addons",
    "copy-dist": "node -e \"require('fs').cpSync('build', 'dist', {recursive: true}); console.log('Copiado build/ -> dist/')\"",
    "clean": "node -e \"require('fs').rmSync('build', {recursive:true, force:true})\"",
    "start": "node esbuild.mjs --minify --serve",
    "update": "npm update speedy-vision",
    "deploy": "mkdocs gh-deploy",
    "docs": "mkdocs serve",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "speedy-vision": "github:alemart/speedy-vision#v0.9.1"
  },
  "devDependencies": {
    "esbuild": "^0.25.5",
    "typescript": "^4.9.5"
  },
  "config": {}
}
